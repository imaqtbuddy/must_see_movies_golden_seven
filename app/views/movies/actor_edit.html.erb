<form action="http://localhost:3000/update_actor/<%=@actor_id%>">
  <div>
    <label for="actor_name">Name:</label>
    <input id="actor_name" type="string" name="the_name" value="<%=@actor_name%>">
  </div>
  <div>
    <label for="actor_bio">Bio:</label>
    <input id="actor_bio" type="text" name="the_bio" value="<%=@actor_bio%>">
  </div>
    <div>
    <label for="actor_dob">Date of Birth:</label>
    <input id="actor_dob" type="string" name="the_dob" value="<%=@actor_dob%>">
  </div>
    <div>
    <label for="actor_image_url">Picture URL:</label>
    <input id="actor_image_url" type="string" name="the_url" value="<%=@actor_image%>">
  </div>
  <div>
    <button>Save Actor Changes</button>
  </div>
</form>
